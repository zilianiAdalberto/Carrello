            <div class="form-group">
                @*@Html.Label("Utente", "UtenteDesc", htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    <div class="checkbox">
                        @*@Html.DropDownList(model.Cliente.ClienteId, model, htmlAttributes: new { @class = "form-control" })*@
                        @Html.DropDownList("articoloid", articoli, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
